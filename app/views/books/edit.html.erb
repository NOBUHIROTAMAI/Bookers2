<main>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>

     <% if @book.errors.any? %>
  <div id="error_explanation">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%= form_for(@book) do |f| %>
 <div class="form-group">
  <div class="book-title">Title</div>
    <%= f.text_field :title, class: "form-control title" %>
 </div>
 <div class="form-group">
  <div class="book-opinion">Opinion</div>
    <%= f.text_area :body, class: "form-control body" %>
 </div>
 <div class="form-group">
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
 </div>
<% end %>



    <div class="menu">
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
    </div>
  <div class="col-xs-3"></div>
</div>
</div>

 <% if @user == current_user.id %>
    <%= link_to edit_user_path(current_user.id) do %>
        <div class= " edit btn btn-outline-secondary btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
    <% end %>
    <% end %>

</main>



