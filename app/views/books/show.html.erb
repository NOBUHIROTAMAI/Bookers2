  <%= render 'layouts/notice' %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'books/book', book: @book_new %>

<div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'40x40' %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>

          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
 </div>
