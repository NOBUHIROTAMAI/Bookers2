<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

           <% if @user.errors.any? %>
        <div id="error_explanation">
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(@user) do |f| %>
      <div class="form-group">
        <div class="user-name">Name</div>
          <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <div class="user-edit-image">Image</div>
          <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <div class="user-introduction">Introduction</div>
          <%= f.text_area :introduction, class: "form-control introduction" %><br>
        <div class="upload">
          <%= f.submit " Update User",class: "btn btn-secondary" %>
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>

   <% if @user == current_user.id %>
    <%= link_to edit_user_path(current_user.id) do %>
        <div class= " edit btn btn-outline-secondary btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
    <% end %>
    <% end %>

</main>

